/* client/pages/course/course.wxss */
page{
  background-color: #8bdb9857; 
}
.main{
  font-family: '华文细黑';
  font-size: 36rpx;
}
button{
  font-size: 30rpx;
}
.section{
  background-color:#ffffff; 
  border-radius: 25rpx;
  margin-top:20rpx; 
  padding: 10rpx 0;
}

.topItem{
  margin-top:30rpx;
  display: flex;
}
.leftItem{
  width: 60%;
  margin: 20rpx;
  display: flex;
}
.pic{
  width: 132rpx;
  height: 132rpx;
  margin-right: 20rpx;
}
.courseNmae{
  margin-top:10rpx;
  width:250rpx;
  display: flex;
  flex-direction: column;
}

.rightItem{
  width: 40%;
  margin: 10rpx 30rpx 0 0;
}
.rightItem button{
  margin:10rpx 0;
}
.icon{
  width:38rpx;
  height:38rpx;
  padding-right: 10rpx;
}

.buttomItem{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.buttomItem button{
  width:32%;
}