/* client/pages/showanswers/showanswers.wxss */
.blockItem{
  border: 2rpx solid;
  border-color: #9afd9a;
  border-radius: 25rpx;
  margin: 10rpx 0;
}

/*问题部分*/
.section{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 20rpx 40rpx 5rpx 60rpx;
}
.top{
  margin: 30rpx 0;
  font-size: 42rpx;
}
.answer{
  margin:20rpx 0;
  width: 650rpx;  
  font-size: 36rpx;
  display: flex;
  align-items: center;
}
.iconSet{
  margin-right:16rpx;
  width:48rpx;
  height:48rpx;
}

/* 底部收藏 */
.bottom{
  width: 100%;
  height: 75rpx;
  display: flex;
  flex-direction: row;
}
.bottomNull{
  width: 85%;
}
.bottom image{
  width: 53rpx;
  height: 50rpx;
  padding: 12rpx 30rpx;
  border: 2rpx solid;
  border-color: #9afd9a;
  border-radius: 25rpx;
}

/* 底部导航 */
.bottomBar{
  position: fixed;
  bottom: 0;  
  padding-top:20rpx;
  width: 100%;
  height: 70rpx;
  background-color: white;
  color: #59695b;
  font-size:34rpx;
  text-align: center;
  border: 1rpx solid rgba(199, 198, 198, 0.781);
  border-radius: 16rpx;
}
