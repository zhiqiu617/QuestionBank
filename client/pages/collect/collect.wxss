/* client/pages/collect/collect.wxss */
page{
  height: 100%;
}
/*顶部tab*/
.nav{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top:0;
  width: 100%;
  height:100rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.nav view{
  width:50%;
  text-align: center;
}
.txt{
  color:rgb(4, 218, 15);
}

/* 中间滑块部分 */
.swipeblock{
  height:100%;
  width: 100%;
  position: fixed;
  top:180rpx;
}
/* 小圆点 */
/*用来包裹所有的小圆点 */
.dots {
  display: flex;
  flex-direction: row;
  position: absolute;
  top:0;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(253, 251, 128, 0.582); 
}
/*未选中时的小圆点样式 */
.dot {
  width: 30rpx;
  height: 7rpx;
  border-radius: 50%; 
  padding: 0 20rpx;
  
}
/*选中以后的小圆点样式 */
.active {
  width: 30rpx;
  height: 7rpx;
  background-color: rgb(255, 202, 57);
}

.swiper_box{
  height: 100%;
}
