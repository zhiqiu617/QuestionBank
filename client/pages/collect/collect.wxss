/* 中间问题 */
.section{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 20rpx 40rpx 5rpx 60rpx;
}
.top{
  margin: 30rpx 0;
  font-size: 42rpx;
}
.answer{
  margin:20rpx 0;
  width: 650rpx;  
  font-size: 36rpx;
  display: flex;
  align-items: center;
}
.iconSet{
  margin-right:16rpx;
  width:48rpx;
  height:48rpx;
}

/* 底部收藏 */
.bottom{
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 180rpx;
  border-top: 2rpx solid rgba(199, 198, 198, 0.781);
}
.bottom image{
  position: absolute;
  right: 100rpx;
  margin-top: 15rpx;
  width: 53rpx;
  height: 50rpx;
}